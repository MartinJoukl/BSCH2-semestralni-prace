@model Informacni_System_Pojistovny.Models.Model.DokumentModels.DokumentUploadModel

@{
    ViewData["Title"] = "Nahrát dokument";
}

<h1>Nahrát dokument</h1>

<h4>Dokument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddDocument" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <!-- Jen u klienta - neni treba volit
                <div class="form-group">
                <label asp-for="KlientId" class="control-label"></label>
                <select name="KlientId" class="form-control" asp-items="@ViewBag.klienti"></select>
                <span asp-validation-for="KlientId" class="text-danger"></span>
            </div> -->
            <div class="form-group">
                <label asp-for="Nazev" class="control-label"></label>
                <input asp-for="Nazev" class="form-control" />
                <span asp-validation-for="Nazev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Nahrát" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Zpět na klienta" , "Details", new { id = ViewContext.RouteData.Values["id"]})
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
