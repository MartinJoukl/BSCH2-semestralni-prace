@model IEnumerable<Informacni_System_Pojistovny.Models.Entity.Pobocka>

@{
    ViewData["Title"] = "Index";
}

<h1>Seznam poboček</h1>

<p>
                        @if (Context.User.IsInRole(UzivateleRole.Admin.ToString()) || Context.User.IsInRole(UzivateleRole.PriviledgedUser.ToString()))
                    {
    <a asp-action="Create">Přidat novou pobočku</a>
                    }
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Filtrovat dle řetězce: <input type="text" name="CurrentFilter" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Filtruj" class="btn btn-default" /> |
            <a asp-action="Index">Zrušit filtr</a>
        </p>
    </div>
</form>
@Html.Partial("_paging")
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazev)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                                                    <tr>
                                                        <td>
                    @Html.DisplayFor(modelItem => item.Nazev)
                                                        </td>
                                                        <td>
                    @if (Context.User.IsInRole(UzivateleRole.Admin.ToString()) || Context.User.IsInRole(UzivateleRole.PriviledgedUser.ToString()))
                    {
                        <span>@Html.ActionLink("Editace", "Edit", new { id=item.PobockaId }) |</span>
                    }
                    @Html.ActionLink("Detaily", "Details", new { id=item.PobockaId }) 
                    @if (Context.User.IsInRole(UzivateleRole.Admin.ToString()) || Context.User.IsInRole(UzivateleRole.PriviledgedUser.ToString()))
                    {
                   <span>| @Html.ActionLink("Smazat", "Delete", new { id=item.PobockaId })</span>
                    }
                                                        </td>
                                                    </tr>
        }
    </tbody>
</table>
