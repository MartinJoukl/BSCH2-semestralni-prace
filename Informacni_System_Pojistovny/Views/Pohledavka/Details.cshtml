@model Informacni_System_Pojistovny.Models.Entity.Pohledavka

@{
    ViewData["Title"] = "Detail pohledávky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<div>
    <h4>Pohledávka</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vznik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vznik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumSplatnosti)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumSplatnosti)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vyse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vyse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumSplaceni)
        </dt>
        <dd class = "col-sm-10">
            @{
                if (Model.DatumSplaceni != null)
                {
                //Html.DisplayFor(modelItem => item.DatumSplaceni);
                                                                    <span>@(((DateTime)Model.DatumSplaceni).ToString("dd.MM.yyyy"))</span>
                }
                else
                {
                                          <span>Nesplaceno</span>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Popis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Popis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pojistka)
        </dt>
        <dd class = "col-sm-10">
            @Html.ActionLink("Detail pojistky", "Details","Pojistka", new { id=Model.Pojistka.ID })
        </dd>
    </dl>
</div>
<div>
    @if (Context.User.IsInRole(UzivateleRole.Admin.ToString()) || Context.User.IsInRole(UzivateleRole.PriviledgedUser.ToString()))
                    {
   <span> @Html.ActionLink("Upravit", "Edit", new {  id = Model.ID }) |</span>
                    }
    <a asp-action="Index">Zpět na přehled</a>

    </div>
