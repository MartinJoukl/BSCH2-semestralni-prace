@model Informacni_System_Pojistovny.Models.Model.Pojistka.PojistkaEditModel

@{
    ViewData["Title"] = "Editace pojistky";
}

<h1>Editace pojistky</h1>

<h4>Pojistka</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Poplatek" class="control-label"></label>
                <input asp-for="Poplatek" class="form-control" />
                <span asp-validation-for="Poplatek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SjednanaVyse" class="control-label"></label>
                <input asp-for="SjednanaVyse" class="form-control" />
                <span asp-validation-for="SjednanaVyse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Změnit výši pojistky" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zpět na přehled pojistek</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
