@model Informacni_System_Pojistovny.Models.Entity.PojistnyProdukt

@{
    ViewData["Title"] = "Správa stavů pojistného produktu";
}

<h1>                
    @if (Model?.Status == true)
    {
        @Html.DisplayName("Zneaktivnění ")        
    }
    @if (Model?.Status == false)
    {
        @Html.DisplayName("Zaktivnění ")
    } 
pojistného produktu</h1>

<h3>Chcete opravdu
    @if (Model?.Status == true)
    {
        @Html.DisplayName("Zneaktivnit ")        
    }
    @if (Model?.Status == false)
    {
        @Html.DisplayName("Zaktivnit ")
    } 
    tento pojistný produkt?</h3>
<div>
    <h4>Pojistný produkt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazev)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazev)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Popis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Popis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaximalniVysePlneni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaximalniVysePlneni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model?.Status == true)
            {
                @Html.DisplayName("Aktivní")
            }
            @if (Model?.Status == false)
            {
                @Html.DisplayName("Neaktivní")
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Změnit stav" class="btn btn-danger" /> |
        @Html.ActionLink("Zpět na pojistku" , "Details", new { id = ViewContext.RouteData.Values["id"]})
    </form>
</div>
