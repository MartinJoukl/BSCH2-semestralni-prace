@model Informacni_System_Pojistovny.Models.Entity.PojistnyProdukt

@{
    ViewData["Title"] = "Detaily pojistného produktu";
}

<h1>Detaily pojistného produktu</h1>

<div>
    <h4>Pojistný produkt</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazev)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazev)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Popis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Popis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MaximalniVysePlneni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaximalniVysePlneni)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == true)
            {
                @Html.DisplayName("Aktivní")
            }
            @if (Model.Status == false)
            {
                @Html.DisplayName("Neaktivní")
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editovat", "Edit", new { id = Model.ID }) |
    <a asp-action="Index">Zpět na přehled pojistných produktů</a>
</div>
