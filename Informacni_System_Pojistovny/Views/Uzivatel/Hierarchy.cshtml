@model IEnumerable<Informacni_System_Pojistovny.Models.Model.Uzivatele.UzivatelHierarchicalModel>

@{
    ViewData["Title"] = "Hierarchie uživatelů";
}

<h1>Hierarchie uživatelů</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jmeno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijmeni)
            </th>
            <th>
                Manažer
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uroven)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        string email = "";
        <tr>
            <td>
                @for (int i = 1; i < item.Uroven; i++)
                {
                    email += "--";
                }
                @{
                    email += item.Email;
                }
                @email
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jmeno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prijmeni)
            </td>
            <td>
                @Html.DisplayName(item.Manazer?.Jmeno + " " + item.Manazer?.Prijmeni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uroven)
            </td>
            <td>
                @Html.ActionLink("Upravit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaily", "Details", new { id = item.Id  }) |
                @Html.ActionLink("Smazat", "Delete", new { id = item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
