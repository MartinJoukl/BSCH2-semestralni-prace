@model IEnumerable<Informacni_System_Pojistovny.Models.Entity.Uzivatel>

@{
    ViewData["Title"] = "Přehled uživatelů";
}

<h1>Přehled uživatelů</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>ID</th>
            <th>Mail</th>
            <th>Jméno</th>
            <th>Příjmení</th>
            <th>Přiřazená role</th>
        </tr>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Jmeno
                    </td>
                    <td>
                        @item.Prijmeni
                    </td>
                    <td>
                    @item.Role
                    </td>
                    <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
                    @Html.ActionLink("Impersonifikuj", "Impersonifikace", new {  id=item.Id },HttpMethod.Post)
                    </td>
                </tr>
        }
    </tbody>
</table>
