@model Informacni_System_Pojistovny.Models.Model.UzivatelLoginFormModel

@{
    ViewData["Title"] = "Příhlášení do systému";
}

<h1>Přihlášení do systému</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Heslo" class="control-label"></label>
                <input asp-for="Heslo" class="form-control" />
                <span asp-validation-for="Heslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RedirectToUrl" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Přihlásit se" class="btn btn-primary" />
            </div>
            @if (ViewData["error"] != null)
            { 
                     <span class="text-danger field-validation-error">Přihlášení selhalo. Ujistěte se, že zadáváte správně své přihlašovací údaje.</span>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Zpět domů</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
