@model Informacni_System_Pojistovny.Models.Entity.Zavazek

@{
    ViewData["Title"] = "Detail závazku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<div>
    <h4>Závazek</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vznik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vznik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumSplatnosti)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumSplatnosti)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vyse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vyse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumSplaceni)
        </dt>
        <dd class = "col-sm-10">
            @{
                if (Model.DatumSplaceni != null)
                {
                //Html.DisplayFor(modelItem => item.DatumSplaceni);
                                                                    <span>@(((DateTime)Model.DatumSplaceni).ToString("dd.MM.yyyy"))</span>
                }
                else
                {
                                          <span>Nesplaceno</span>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Popis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Popis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PojistnaUdalost)
        </dt>
        <dd class = "col-sm-10">
            @Html.ActionLink("Detail pojistné události", "Details","PojistnaUdalost", new { id=Model.PojistnaUdalost.PojistnaUdalostId })
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Upravit", "Edit", new {  id = Model.ZavazekId }) |
